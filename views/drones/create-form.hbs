<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Create a new drone</h2>
        </div>
    </div>
    <form class="row g-3" action="/drones/create" method="POST">
        <div class="col-12">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="col-md-6">
            <label class="form-label">Propellers</label>
            <input type="number" class="form-control" name="propellers">
        </div>
        <div class="col-md-6">
            <label class="form-label">Maximum Speed</label>
            <input type="number" class="form-control" name="maxSpeed">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>
